@model List<MaryamRahimiFard.Core.Models.Course>



<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <div class="text-center clases" data-animation="fadeIn" data-timeout="200">
            <div class="section-title">
                <h3>@ViewBag.HomeNewCourses.Title</h3>
            </div>
            <div class="section-description">
                <p>
                    @ViewBag.HomeNewCourses.ShortDescription
                </p>
            </div>
        </div>
        <div class="white-space"></div>
    </div>
</div>

<section id="gallery2">
    <div class="row">

        <div class="owl-carousel" id="gallery2-carousel">
            @foreach (var item in Model)
            {
                <!-- IMAGE ITEM ELEMENT -->
                <div class="blog-item clases" data-animation="fadeIn" data-timeout="200">
                    <a href="/Course/CourseDetails/@item.Id/@item.Title.Replace(' ', '-')">
                        <img width="100%" height="300px" src="~/Files/CourseImages/Thumb/@item.Image" alt="Post 1">
                    </a>
                    <div class="blog-info text-center">
                        <h6>@item.Title </h6>
                        <p>
                            @item.ShortDescription
                        </p>
                        <a class="btn btn-small btn-clr-reverse" href="/Course/CourseDetails/@item.Id/@item.Title.Replace(' ', '-')">بیشتر</a>
                    </div>
                </div>
                <!-- / IMAGE ITEM ELEMENT -->
            }

