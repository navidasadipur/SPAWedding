@model List<SPAWedding.Web.ViewModels.ArticleCategoriesViewModel>

<div class="widget widget-cats">
    <h3 class="widget-title text-dark">دسته بندی ها</h3><!-- End .widget-title -->

    <ul>
        @foreach (var item in Model)
        {
            <li><a href="/Blog?category=@item.Id">@item.Title<span>@item.ArticleCount</span></a></li>
        }
    </ul>
</div><!-- End .widget -->

