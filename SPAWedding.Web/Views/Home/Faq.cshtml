@model List<SPAWedding.Core.Models.FaqGroup>

@{
    ViewBag.Title = "سوالات متداول";
}

<div class="page-title text-center">
    <div class="block-parallax height40vh blend-bg text-center breadcrumb-back">
        <div class="page-title-wrap">
            <div class="page-title-inner">
                <div class="page-title-align animate" data-animation="fadeIn" data-timeout="800">
                    <h1>@ViewBag.Title</h1>
                    <div class="page-title-description breadcrumbs">
                        <ul>
                            <li><a href="/">خانه</a><span>/</span></li>
                            <li>@ViewBag.Title</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--  / .block-parallax -->
</div>

<div class="wrapper-content">
    <div class="container">
        <div class="row">

            <div class="col-md-offset-2 col-md-8">
                <div class="text-center">
                    <h4>@ViewBag.Faq.ShortDescription</h4>
                    <div class="white-space"></div>
                    @Html.Raw(ViewBag.Faq.Description)
                    <div class="white-space"></div>
                    <div class="white-space"></div>
                </div>
            </div>
            @foreach (var faqGroup in Model)
            {
                <div class="col-md-12">

                    <div class="text-center">
                        <div class="white-space"></div>
                        <h6>@faqGroup.Title</h6>
                        <div class="white-space"></div>
                    </div>

                    <!--  ACCORDION ELEMENT -->

                    <ul class="accordion-element">
                        @foreach (var item in faqGroup.Faqs)
                        {
                            <li>
                                <a class="toggle" href="javascript:void(0);" data-item="item">
                                    @item.Question
                                </a>
                                <ul class="inner">
                                    <p>
                                        @item.Answer
                                    </p>
                                </ul>
                            </li>
                        }

                    </ul>
                    <!-- / .tab-element -->
                    <!--  / ACCORDION ELEMENT -->

                </div>
            }
        </div>
    </div>
    <!-- / .container -->

</div>
<!-- / .wrapper-content -->





