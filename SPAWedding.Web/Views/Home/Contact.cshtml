<main class="main">
    <div class="page-header text-center" style="background-image: url('/Files/StaticContentImages/Image/@ViewBag.BanerImage')">
        <div class="container">
            <h1 class="page-title">@ViewBag.Title@*<span>صفحات</span>*@</h1>
        </div><!-- End .container -->
    </div><!-- End .page-header -->
    <nav aria-label="breadcrumb" class="breadcrumb-nav border-0 mb-0">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">خانه</a></li>
                <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
            </ol>
        </div><!-- End .container -->
    </nav><!-- End .breadcrumb-nav -->

    <div class="page-content">
        <div class="col-12 d-flex mb-5">
            <div class="bg-white w-100">
                @Html.Raw(Model.Map.Description)
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="contact-box text-center">
                        <h3>@Model.Address.Title</h3>

                        <address>@Model.Address.ShortDescription</address>
                    </div><!-- End .contact-box -->
                </div><!-- End .col-md-4 -->

                <div class="col-md-4">
                    <div class="contact-box text-center">
                        <h3>اطلاعات تماس</h3>

                        <div><a href="mailto:@Model.Email.ShortDescription">@Model.Email.ShortDescription</a></div>
                        <div><a href="tel:@Model.Phone.ShortDescription">@Model.Phone.ShortDescription</a></div>
                    </div><!-- End .contact-box -->
                </div><!-- End .col-md-4 -->

                @Html.Action("ContactSocialsSection", "Home")
            </div><!-- End .row -->

            <hr class="mt-3 mb-5 mt-md-1">
            @Html.Action("ContactUsForm", "Home")

        </div><!-- End .page-content -->
    </div>
</main><!-- End .main -->



