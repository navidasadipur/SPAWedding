@model List <MaryamRahimiFard.Core.Models.CourseCategory>
@using MaryamRahimiFard.Core.Models
@{
    //var mainProductGroups = ViewBag.MainProductGroups as List<ProductGroup>;
}

<style>
        .breadcrumb-back {
  background-image: url("/Files/StaticContentImages/Image/@ViewBag.HeaderImage");
}
</style>

<header class="top-menu header-menu animate" data-animation="fadeIn" data-timeout="900">
    <div class="container">
        <!-- -fluid  -->
        <div class="row">
            <div class="col-md-2 col-sm-2 mobile-center">
                <a href="/">
                    <div class="site-logo">
                        @ViewBag.MainTitle
                    </div>
                </a>
            </div>
            <div class="col-md-10 col-sm-10 padding-none">
                <div class="navigation">
                    <div class="mobile-center">
                        <a href="#menu" class="menu-link"><i class="fa fa-bars" aria-hidden="true"></i></a>
                    </div>
                    <nav class="menu" id="menu">
                        <ul>
                            <li>
                                <a class="parent" href="/">خانه</a>

                            </li>
                            <li>
                                @*<a class="parent" href="/course/">کلاس ها</a>*@

                                <!-- first is the link in your navbar -->
                                <a class="nav-link dropdown-toggle parent" href="#" id="servicesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">کلاس ها</a>

                                <!-- your mega menu starts here! -->
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="servicesDropdown">
                                    <a class="dropdown-item text-center" href="/Course/" style="color: #612d7f; font-weight:bold;">مشاهده همه دوره ها</a>

                                    <!-- next, a divider to tidy things up -->
                                    <div class="dropdown-divider"></div>

                                    <!-- finally, using flex to create your layout -->
                                    <div class="d-md-flex align-items-start justify-content-start">

                                        @if (Model != null)
                                        {
                                            foreach (var group in Model)
                                            {
                                                <div>
                                                    <div class="dropdown-header" style="color: #612d7f; font-weight:bold;">@group.Title</div>
                                                    @if (group.Children != null)
                                                    {
                                                        foreach (var group2 in group.Children)
                                                        {
                                                            if (group2.IsDeleted == true)
                                                            {
                                                                continue;
                                                            }

                                                            <a class="dropdown-item" href="/Course?category=@group2.Id" style="color: black;">@group2.Title</a>
                                                        }
                                                    }
                                                </div>
                                            }
                                        }

                                    </div>
                                </div>

                            </li>
                            <li>
                                <a class="parent" href="/blog/">مقالات</a>

                            </li>
                            <li>
                                <a class="parent" href="/gallery/">گالری</a>

                            </li>
                            <li>
                                <a class="parent" href="/certificate/">گواهینامه ها</a>

                            </li>
                            <li>
                                <a class="parent" href="/faq/">سوالات متداول</a>

                            </li>
                            <li>
                                <a class="parent" href="/about/">درباره ما</a>

                            </li>
                            <li>
                                <a class="parent" href="/contactUs/">تماس با ما</a>

                            </li>
                        </ul>
                    </nav>
                    <!-- / nav -->
                </div>
            </div>
        </div>
    </div>
</header>
