@model List<SPAWedding.Core.Models.Certificate>
@{
    ViewBag.Title = "گواهینامه ها";
}

<div class="page-title text-center">
    <div class="block-parallax height40vh blend-bg text-center breadcrumb-back">
        <div class="page-title-wrap">
            <div class="page-title-inner">
                <div class="page-title-align animate" data-animation="fadeIn" data-timeout="800">
                    <h1>@ViewBag.Title</h1>
                    <div class="page-title-description breadcrumbs">
                        <ul>
                            <li><a href="/">خانه</a><span>/</span></li>
                            <li>@ViewBag.Title</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--  / .block-parallax -->
</div>

<div class="wrapper-content">
    <div class="container">
        <div class="row">
            <div class="col-md-offset-2 col-md-8 text-center text-description">
                @Html.Raw(ViewBag.Certificate.Description)
            </div>
        </div>
    </div>

    <section id="gallery">
        <div class="gallery-section">
            <div class="container-fluid">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="gallery-box delay col-md-4">
                            <div class="box delay">
                                <a class="delay-1" href="/Files/CertificatesImages/@item.Image" data-fancybox="gallery1">
                                    <img alt="" src="/Files/CertificatesImages/@item.Image" class="img-fluid">
                                </a>
                            </div>
                        </div>
                    }
                    </div>
            </div>
        </div>
    </section>
</div>
<!-- / .container -->
    </div>
<!-- / .wrapper-content -->




