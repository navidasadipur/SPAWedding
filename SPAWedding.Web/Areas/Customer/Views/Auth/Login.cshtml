<main class="main">
    <nav aria-label="breadcrumb" class="breadcrumb-nav border-0 mb-0">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/home">خانه</a></li>
                <li class="breadcrumb-item"><a href="#">صفحات</a></li>
                <li class="breadcrumb-item active" aria-current="page"> @ViewBag.Title</li>
            </ol>
        </div><!-- End .container -->
    </nav><!-- End .breadcrumb-nav -->

    <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17"
         style="background-image: url(/Content/client/pic/bgmedi2.jpg)">
        <div class="container">
            @if (!string.IsNullOrEmpty(ViewBag.LoginError))
            {
                <div class="container margin-top-50">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="alert alert-warning">
                                <span class="text-danger">@ViewBag.LoginError</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="form-box">

                <div class="tab-pane ade show active" id="register-2" role="tabpanel"
                     aria-labelledby="register-tab-2">

                    @Html.Action("LoginPartial", "Auth", new { area = "Customer" })


                </div><!-- .End .tab-pane -->
            </div><!-- End .form-box -->
        </div><!-- End .container -->
    </div><!-- End .login-page section-bg -->
</main><!-- End .main -->

<style>
    .field-validation-error span {
        color: darkred;
    }
</style>
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
