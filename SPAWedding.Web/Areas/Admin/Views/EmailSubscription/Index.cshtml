@using Kendo.Mvc.UI
@using SPAWedding.Infrastructure.Helpers

@{
    ViewBag.Title = "اعضای خبرنامه";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@model List<SPAWedding.Core.Models.EmailSubscription>


<input type="hidden" id="nav_active" value="email_subscription">
<input type="hidden" id="nav_item_active" value="email_subscription">
<div class="card card-custom">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
                @ViewBag.Title
                <span class="d-block text-muted pt-2 font-size-sm"></span>
            </h3>
        </div>
        <div class="card-toolbar">

        </div>
    </div>


    <div class="card-body">
        <!--begin: Datatable-->
        @(Html.Kendo().Grid(Model)
                .Name("Grid")
                .HtmlAttributes(new { style = "height:450px" })
                .Columns(columns =>
                {
                //columns.Bound(model => model.Id).Title("شناسه");
                columns.Bound(item => @item.Email);
                columns.Bound(item => @item.Id).IncludeInMenu(false).Sortable(false).Title("دستورات").Filterable(false).Groupable(false).Template(
                                    @<text>
                                        <a class='btn btn-sm btn-clean btn-icon' onclick="@(CheckPermission.Check("emailsubscriptiondelete") ? $"btnDelete({item.Id})" : "accessDenied()")"><i class='far fa-trash-alt text-danger'></i></a>
                                    </text>).Width(300);
                 })
      .Sortable()
      .Scrollable()
      .Pageable(pager => pager.PageSizes(new int[] { 10, 30, 50, 70, 100 }).Messages(m => m.ItemsPerPage("آیتم در هر صفحه").Display("")))
          .DataSource(dataSource => dataSource
          .Server()

          .Model(model => model.Id(item => item.Id))
      )
      .Filterable(filterable => filterable
          .Messages(m => m
              .Filter("فیلتر")
              .Clear("حذف")
              .Info("آن هایی را نشان بده که:")
              .And("و")
              .Or("یا")
              )
          .Operators(operators => operators
              .ForString(str => str.Clear()
                  .IsEqualTo("برابر است با")
                  .IsNotEqualTo("برابر نیست با")
                  .Contains("شامل میشود")
                  .DoesNotContain("شامل نمیشود")
                  .StartsWith("شروع میشود با")
                  .IsNullOrEmpty("خالی است")
                  .IsNotNullOrEmpty("خالی نیست")
              )))
        )
        <!--end: Datatable-->
    </div>



</div>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" id="myModalHeader">
                <h5 class="modal-title" id="myModalLabel">Modal Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body" id="myModalBody">
                ...
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('.k-i-filter').removeClass("k-i-filter").addClass("k-icon k-i-more-vertical");
        });
    </script>
    <script>
        function btnDelete(id) {
            $.get("/Admin/EmailSubscription/Delete/" + id, function (result) {
                $("#myModal").modal();
                $("#myModalLabel").html("حذف عضو خبرنامه");
                $("#myModalHeader");
                $("#myModalBody").html(result);
            });
        }
    </script>
}


