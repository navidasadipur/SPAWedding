@model SPAWedding.Web.ViewModels.ContactUsViewModel
@{
    ViewBag.Title = "تماس با ما";
}

<div class="page-title text-center">
    <div class="block-parallax height40vh blend-bg text-center breadcrumb-back">
        <div class="page-title-wrap">
            <div class="page-title-inner">
                <div class="page-title-align animate" data-animation="fadeIn" data-timeout="800">
                    <h1>@ViewBag.Title</h1>
                    <div class="page-title-description breadcrumbs">
                        <ul>
                            <li><a href="/">خانه</a><span>/</span></li>
                            <li>@ViewBag.Title</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--  / .block-parallax -->
</div>

<div class="wrapper-content">
    <div class="container">
        <div class="row">

            <div class="col-md-offset-2 col-md-8">

                <div class="text-center">
                    <h4>@ViewBag.ContactUs.ShortDescription</h4>
                    <div class="white-space"></div>
                    @Html.Raw(ViewBag.ContactUs.Description)
                    <div class="white-space"></div>
                    <div class="white-space"></div>

                    <div class="text-center btn-margin">
                        <div class="row">
                            <div class="col-md-4">

                                <!-- ICON TEXT ELEMENT -->

                                <div class="icon-text icon-text-clr">
                                    <i class="fa fa-map-marker animate" data-animation="bounceIn"
                                       data-timeout="700"></i>
                                    <div class="icon-text-title">
                                        <h6>آدرس</h6>
                                    </div>
                                    <div class="icon-text-description text-purple">@Model.Address.ShortDescription</div>
                                </div>

                                <!-- / ICON TEXT ELEMENT -->
                                <div class="white-space"></div>
                                <div class="white-space"></div>

                            </div>
                            <div class="col-md-4">

                                <!-- ICON TEXT ELEMENT -->

                                <div class="icon-text icon-text-clr">
                                    <i class="fa fa-mobile animate" data-animation="bounceIn"
                                       data-timeout="800"></i>
                                    <div class="icon-text-title">
                                        <h6>تلفن</h6>
                                    </div>
                                    <div class="icon-text-description">
                                        <a href="tel:@Model.Phone.ShortDescription">@Model.Phone.ShortDescription</a>
                                    </div>
                                </div>

                                <!-- / ICON TEXT ELEMENT -->
                                <div class="white-space"></div>
                                <div class="white-space"></div>

                            </div>
                            <div class="col-md-4">

                                <!-- ICON TEXT ELEMENT -->

                                <div class="icon-text icon-text-clr">
                                    <i class="fa fa-envelope-o animate" data-animation="bounceIn"
                                       data-timeout="1000"></i>
                                    <div class="icon-text-title">
                                        <h6>ایمیل</h6>
                                    </div>
                                    <div class="icon-text-description">
                                        <a href="mailto:@Model.Email.ShortDescription"
                                           class="">@Model.Email.ShortDescription</a>
                                    </div>
                                </div>

                                <!-- ICON TEXT ELEMENT -->
                                <div class="white-space"></div>
                                <div class="white-space"></div>

                            </div>
                        </div>
                    </div>

                    <!-- CONTACT FORM ELEMENT -->

                    @Html.Action("ContactUsForm", "Home")

                    <!-- CONTACT FORM ELEMENT -->

                </div>

            </div>

        </div>
    </div>
    <!-- / .container -->

    <div class="white-space"></div>
    <div class="white-space"></div>

    <!--  GOOGLE MAP ELEMENT -->

    <div class="map-wrap height400">
        <div class="mapouter">
            <div class="gmap_canvas">
                @Html.Raw(Model.Map.Description)
                <a href="https://fmovies-online.net">fmovies</a><br>
                <style>
                    .mapouter {
                        position: relative;
                        text-align: right;
                        height: 400px;
                        width: 100%;
                    }
                </style>
                <style>
                    .gmap_canvas {
                        overflow: hidden;
                        background: none !important;
                        height: 400px;
                        width: 100%;
                    }
                </style>
            </div>
        </div>
    </div>

    <!-- / GOOGLE MAP ELEMENT -->

</div>

