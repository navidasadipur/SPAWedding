@model List<SPAWedding.Core.Models.Certificate>
@{
    ViewBag.Title = "افتخارات";
}

<div class="page-header text-center" style="background-image: url('/Files/StaticContentImages/Image/@ViewBag.BanerImage')">
    <div class="container">
        <h1 class="page-title">@ViewBag.Title</h1>
    </div><!-- End .container -->
</div><!-- End .page-header -->
<nav aria-label="breadcrumb" class="breadcrumb-nav border-0 mb-0">
    <div class="container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">خانه</a></li>
            @*<li class="breadcrumb-item"><a href="#">صفحات</a></li>*@
            <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
        </ol>
    </div><!-- End .container -->
</nav><!-- End .breadcrumb-nav -->


<div class="container">
    <h3 class="text-center py-4">@ViewBag.Title <span style="color: #00B4A2;">ما</span></h3>
    <div class="row d-flex justify-content-center align-items-center">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <!-- Button trigger modal -->
                <button type="" class="border-0 p-0 " data-toggle="modal" data-target="#exampleModalLong1">

                    <img src="/Files/CertificatesImages/@item.Image" alt="honor">
                </button>

                <!-- Modal -->
                <div style="top: 0px;" class="modal fade" id="exampleModalLong1" tabindex="-1" role="dialog"
                     aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div style="position: relative;" class="modal-content " style="background: transparent;">
                            <span class="text-right">

                                <a style="font-size: 24px;background-color: white; position: absolute; right: 20px; top: 20px; z-index: 2000; padding: 10px;border-radius: 7px;"
                                   href="" type="" class="badge text-right text-dark fuck" data-dismiss="modal">X</a>
                            </span>

                            <div id="carouselExampleControls1" class="carousel slide" data-ride="carousel">
                                <div class="carousel-inner">
                                    @for (int i = 0; i < Model.Count; i++)
                                    {
                                        var test = "";
                                        if (i == 0)
                                        {
                                            test = "active";
                                        } 
                                        <div class="carousel-item m-0 @test">
                                            <img class="d-block w-100" src="/Files/CertificatesImages/@Model[i].Image" alt="Second slide">
                                        </div>
                                    }

                                </div>
                                <a class="carousel-control-prev w-50 " href="#carouselExampleControls1" role="button"
                                   data-slide="prev">
                                    <span class="carousel-control-prev-icon ml-2 mr-auto bg-dark"
                                          aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next w-50" href="#carouselExampleControls1" role="button"
                                   data-slide="next">
                                    <span class="carousel-control-next-icon ml-auto mr-2 bg-dark"
                                          aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
