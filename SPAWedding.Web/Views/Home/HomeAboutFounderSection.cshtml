@model SPAWedding.Core.Models.StaticContentDetail


<div class="content-section">
    <div class="container">
        <div class="row">
            <div class="col-md-5">

                <div class="animate" data-animation="fadeIn" data-timeout="400">
                    <img class="circle-img" src="/content/client/img/NewImages/n (36).jpg" alt="Groom Image">
                </div>
                <div class="white-space"></div>

                <div class="white-space"></div>

            </div>

            <div class="col-md-7">

                <h4>@Model.Title</h4>
                <div class="white-space"></div>
