@model List<MaryamRahimiFard.Core.Models.Course>


<div class="col-md-12 mt-3">
    <div class="text-center">
        <div class="separator-medium"></div>
        <h3>جدیدترین کلاس ها</h3>
        <div class="white-space"></div>
    </div>

    <div class="wrapper-content">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">

                        <!-- BLOG ITEM -->

                        <div class="blog-item animate" data-animation="fadeIn" data-timeout="200">
                            <a href="/Course/CourseDetails/@item.Id/@item.Title.Replace(' ', '-')">
                                <img src="~/Files/CourseImages/Thumb/@item.Image" alt="class-@item.Title">
                            </a>
                            <div class="blog-info text-center">
                                <h6>@item.Title</h6>
                                <p>
                                    @item.ShortDescription
                                </p>
                                <a class="btn btn-small btn-clr-reverse" href="/Course/CourseDetails/@item.Id/@item.Title.Replace(' ', '-')">بیشتر</a>
                            </div>
                        </div>

                        <!-- / BLOG ITEM -->

                    </div>
                }

