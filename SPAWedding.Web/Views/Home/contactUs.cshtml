@model SPAWedding.Web.ViewModels.ContactUsViewModel
@{
    ViewBag.Title = "تماس با ما";
}

<div class="page-title text-center">
    <div class="block-parallax height40vh blend-bg text-center breadcrumb-back">
        <div class="page-title-wrap">
            <div class="page-title-inner">
                <div class="page-title-align animate" data-animation="fadeIn" data-timeout="800">
                    <h1>تماس با ما</h1>
                    <div class="page-title-description breadcrumbs">
                        <ul>
                            <li><a href="index.html">خانه</a><span>/</span></li>
                            <li>تماس با ما</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--  / .block-parallax -->
</div>

<div class="wrapper-content">
    <div class="container">
        <div class="row">

            <div class="col-md-offset-2 col-md-8">

                <div class="text-center">
                    <h4>با ما در ارتباط باشید </h4>
                    <div class="white-space"></div>
                    <p>
                        لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ، و با استفاده از طراحان گرافیک
                        است، چاپگرها و متون بلکه روزنامه و مجله در ستون و سطرآنچنان که لازم است، و برای شرایط فعلی
                        تکنولوژی مورد نیاز، و کاربردهای آن
                    </p>
                    <div class="white-space"></div>
                    <div class="white-space"></div>

                    <div class="text-center btn-margin">
                        <div class="row">
                            <div class="col-md-4">

                                <!-- ICON TEXT ELEMENT -->

                                <div class="icon-text icon-text-clr">
                                    <i class="fa fa-map-marker animate" data-animation="bounceIn"
                                       data-timeout="700"></i>
                                    <div class="icon-text-title">
                                        <h6>آدرس</h6>
                                    </div>
                                    <div class="icon-text-description text-purple">تهران ، میدان آزادی</div>
                                </div>

                                <!-- / ICON TEXT ELEMENT -->
                                <div class="white-space"></div>
                                <div class="white-space"></div>

                            </div>
                            <div class="col-md-4">

                                <!-- ICON TEXT ELEMENT -->

                                <div class="icon-text icon-text-clr">
                                    <i class="fa fa-mobile animate" data-animation="bounceIn"
                                       data-timeout="800"></i>
                                    <div class="icon-text-title">
                                        <h6>تلفن</h6>
                                    </div>
                                    <div class="icon-text-description">
                                        <a href="tel:0211234567">021-1234567</a>
                                    </div>
                                </div>

                                <!-- / ICON TEXT ELEMENT -->
                                <div class="white-space"></div>
                                <div class="white-space"></div>

                            </div>
                            <div class="col-md-4">

                                <!-- ICON TEXT ELEMENT -->

                                <div class="icon-text icon-text-clr">
                                    <i class="fa fa-envelope-o animate" data-animation="bounceIn"
                                       data-timeout="1000"></i>
                                    <div class="icon-text-title">
                                        <h6>ایمیل</h6>
                                    </div>
                                    <div class="icon-text-description">
                                        <a href="mailto:info@gmail.com"
                                           class="">info@gmail.com</a>
                                    </div>
                                </div>

                                <!-- ICON TEXT ELEMENT -->
                                <div class="white-space"></div>
                                <div class="white-space"></div>

                            </div>
                        </div>
                    </div>

                    <!-- CONTACT FORM ELEMENT -->

                    <form action="#" id="form-without-labels">
                        <div class="form-group">
                            <input type="text" name="name" id="name" value="" placeholder="نام کاربری">
                        </div>
                        <div class="form-group">
                            <input type="text" name="email" id="email" value="" placeholder="آدرس ایمیل">
                        </div>
                        <div class="form-group">
                            <input type="text" name="phone" id="phone" value="" placeholder="شماره تلفن">
                        </div>
                        <div class="form-group">
                            <textarea name="message" id="message" cols="40" rows="10"
                                      placeholder="پیام خود را بنویسید"></textarea>
                        </div>

                        <div>
                            <input type="submit" class="btn btn-medium btn-clr" value="ارسال">
                        </div>

                    </form>

                    <!-- CONTACT FORM ELEMENT -->

                </div>

            </div>

        </div>
    </div>
    <!-- / .container -->

    <div class="white-space"></div>
    <div class="white-space"></div>

    <!--  GOOGLE MAP ELEMENT -->

    <div class="map-wrap height400">
        <div class="mapouter">
            <div class="gmap_canvas">
                <iframe width="100%" height="400" id="gmap_canvas"
                        src="https://maps.google.com/maps?q=%D8%AA%D9%87%D8%B1%D8%A7%D9%86%20%D8%8C%20%D9%85%DB%8C%D8%AF%D8%A7%D9%86%20%D8%A2%D8%B2%D8%A7%D8%AF%DB%8C&t=&z=13&ie=UTF8&iwloc=&output=embed"
                        frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://fmovies-online.net">fmovies</a><br>
                <style>
                    .mapouter {
                        position: relative;
                        text-align: right;
                        height: 400px;
                        width: 100%;
                    }
                </style>
                <style>
                    .gmap_canvas {
                        overflow: hidden;
                        background: none !important;
                        height: 400px;
                        width: 100%;
                    }
                </style>
            </div>
        </div>
    </div>

    <!-- / GOOGLE MAP ELEMENT -->

</div>
<!-- / .wrapper-content -->
