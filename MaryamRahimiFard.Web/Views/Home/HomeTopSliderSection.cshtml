@model List<MaryamRahimiFard.Core.Models.StaticContentDetail>



@if (Model.Count() != 0)
{
    var first = Model[0];

    Model.RemoveAt(0);


    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            @foreach (var item in Model)
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            }
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="item height100vh blend-bg" style="background-image: url(/Files/StaticContentImages/Image/@first.Image);">
                    <div class="slider-overlay slider-bg"></div>
                    <div class="slider-alignment">
                        <div class="v-align-center">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-offset-2 col-md-8">
                                        <div class="just-image-title-inner text-center">
                                            <div class="just-image-title animate" data-animation="fadeIn"
                                                 data-timeout="600">
                                                <span class="just-image-title-one">@first.Title</span>
                                            </div>
                                            <div class="animate" data-animation="fadeIn" data-timeout="610">
                                                <div class="just-image-description">
                                                    @first.ShortDescription
                                                </div>
                                            </div>
                                            <div class="animate" data-animation="fadeIn" data-timeout="620">
                                                <p><a class="btn btn-large btn-clr" href="@first.Link">بیشتر</a></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @foreach (var item in Model)
            {
                <div class="carousel-item">
                    <div class="item height100vh blend-bg" style="background-image: url(/Files/StaticContentImages/Image/@item.Image);">
                        <div class="slider-overlay slider-bg"></div>
                        <div class="slider-alignment">
                            <div class="v-align-center">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-offset-2 col-md-8">
                                            <div class="just-image-title-inner text-center">
                                                <div class="just-image-title animate" data-animation="fadeIn"
                                                     data-timeout="600">
                                                    <span class="just-image-title-one">@item.Title</span>
                                                </div>
                                                <div class="animate" data-animation="fadeIn" data-timeout="610">
                                                    <div class="just-image-description">
                                                        @item.ShortDescription
                                                    </div>
                                                </div>
                                                <div class="animate" data-animation="fadeIn" data-timeout="620">
                                                    <p><a class="btn btn-large btn-clr" href="@item.Link">بیشتر</a></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-prev-icon " aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}



